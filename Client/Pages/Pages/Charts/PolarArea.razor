@page "/charts/polar-area"

@inject IJSRuntime JsRuntime;

<PageBreadcrumb Title="Polar Area Charts" SubTitle="Charts"/>

<div class="row">
    <div class="col-xl-9">
        <div class="card">
            <div class="card-body">
                <h5
                    class="card-title anchor mb-1"
                    id="overview">
                    Overview
                </h5>

                <p class="mb-0">
                    <span class="fw-medium">
                        Find the JS file for the following
                        chart at:
                    </span>
                    <code>
                        /js/components/apexchart-polar-area.js
                    </code>
                </p>
            </div>
            <!-- end card-body -->
        </div>
        <!-- end card -->

        <div class="card">
            <div class="card-body">
                <h4
                    class="card-title mb-3 anchor"
                    id="basic">
                    Basic Polar Area Chart
                </h4>
                <div dir="ltr">
                    <div
                        id="basic-polar-area"
                        class="apex-charts">
                    </div>
                </div>
            </div>
            <!-- end card body-->
        </div>
        <!-- end card -->

        <div class="card">
            <div class="card-body">
                <h4
                    class="card-title mb-3 anchor"
                    id="monochrome">
                    Monochrome Polar Area
                </h4>
                <div dir="ltr">
                    <div
                        id="monochrome-polar-area"
                        class="apex-charts">
                    </div>
                </div>
            </div>
            <!-- end card body-->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->

    <div class="col-xl-3">
        <div class="card docs-nav">
            <ul class="nav bg-transparent flex-column">
                <li class="nav-item">
                    <a href="/charts/polar-area#overview" class="nav-link">
                        Overview
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/charts/polar-area#basic" class="nav-link">
                        Basic Polar Area Chart
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/charts/polar-area#monochrome" class="nav-link">
                        Monochrome Polar Area
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

@code {
    private IJSObjectReference? _module;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/components/apexchart-polar-area.js");
            await JsRuntime.InvokeVoidAsync("loadPolarAreaCharts");
            await JsRuntime.InvokeVoidAsync("loadTheme");
            await JsRuntime.InvokeVoidAsync("loadApps");
        }
    }

}